{
  "name": "@quick-notes/desktop",
  "version": "1.0.2",
  "description": "A fast, modern desktop note-taking application",
  "author": "Priyanshu Chawda <hellopriyanshu4@gmail.com>",
  "homepage": "https://priyanshuchawda.github.io/electron-notes/",
  "repository": {
    "type": "git",
    "url": "https://github.com/priyanshuchawda/electron-notes.git"
  },
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build && tsc -p tsconfig.node.json",
    "start": "electron .",
    "dist": "bun run build && electron-builder --win --publish never",
    "dist:installer": "bun run build && electron-builder --win nsis --publish never",
    "generate-icons": "node scripts/generate-icons.js"
  },
  "dependencies": {
    "@quick-notes/shared": "workspace:*",
    "@tanstack/react-query": "^5.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sql.js": "^1.13.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/sql.js": "^1.4.9",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "electron-icon-builder": "^2.0.1",
    "sharp": "^0.34.5",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "wait-on": "^7.0.0"
  },
  "build": {
    "appId": "com.priyanshuchawda.quicknotes",
    "productName": "Quick Notes",
    "copyright": "Copyright Â© 2024 Priyanshu Chawda",
    "asar": true,
    "compression": "maximum",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "!node_modules/**/*",
      "node_modules/sql.js/dist/sql-wasm.wasm"
    ],
    "extraResources": [
      {
        "from": "node_modules/sql.js/dist/sql-wasm.wasm",
        "to": "sql-wasm.wasm"
      }
    ],
    "publish": null,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.png",
      "publisherName": "Priyanshu Chawda",
      "legalTrademarks": "Quick Notes by Priyanshu Chawda",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Quick Notes",
      "uninstallDisplayName": "Quick Notes",
      "deleteAppDataOnUninstall": false,
      "include": "installer.nsh",
      "installerIcon": "build/icon.png",
      "uninstallerIcon": "build/icon.png",
      "installerHeaderIcon": "build/icon.png"
    },
    "portable": {
      "artifactName": "${productName}-${version}-Portable.${ext}"
    },
    "removePackageScripts": true
  }
}
